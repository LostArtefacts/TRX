#!/usr/bin/env python3
import argparse

from shared.changelog import get_current_version_changelog
from shared.paths import TR1_DOCS_DIR, TR2_DOCS_DIR


def parse_args() -> argparse.Namespace:
    parser = argparse.ArgumentParser()
    parser.add_argument("version", choices=[1, 2], type=int)
    return parser.parse_args()


def main() -> None:
    args = parse_args()
    if args.version == 1:
        print(get_current_version_changelog(TR1_DOCS_DIR / "CHANGELOG.md"))
    elif args.version == 2:
        print(get_current_version_changelog(TR2_DOCS_DIR / "CHANGELOG.md"))


if __name__ == "__main__":
    main()
